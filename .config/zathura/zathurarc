set dbus-service true
set synctex true
set font 'Hack 12'
set highlight-transparency 0.10
set abort-clear-search false
set adjust-open "width"

# zoom and scroll step size
set zoom-step 20
set scroll-step 200

# copy selection to system clipboard
set selection-clipboard clipboard

# enable incremental search
set incremental-search true

# zoom
map <C-i> zoom in
map <C-o> zoom out
